mixin icon(iconName, iconClass)
    svg(class=`${iconClass}`)
        use(xlink:href=`/images/icons/sprite.svg#${iconName}`)

mixin iconPath(iconPath,iconName, iconClass)
    svg(class=`${iconClass}`)
        use(xlink:href=`${iconPath}/sprite.svg#${iconName}`)

mixin image(imagePath, imageClass, imageAlt)
    if !imageAlt
        - var alt = 'lorem'
    else
        - var alt = imageAlt
    img(src=`${imagePath}`, alt=`${alt}`, class=`${imageClass}`)

mixin items(arr)
    .items
        each i in arr
            div(data-id=i.id).item
                .item__img
                    +image(i.src)
                .item__desc
                    h3.item__title= i.title
                    .item__chars= i.chars
                    .item__txt= i.txt
                .item__bottom
                    .item__prices
                        div(class=i.priceold ? 'item__price_new'  : '').item__price= i.price
                        if i.priceold
                            .item__priceold= i.priceold
                    button(type='button').item__btn.btn Выбрать

