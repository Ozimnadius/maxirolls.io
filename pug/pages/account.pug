                                                    <path d="M1 4.11111L4.57143 8L11 1" stroke="#FF4A00" stroke-width="1.8"/>
                                                    </svg>
                                                    | Доставлено

                                        .acorder__list
                                            each i in accountOrders
                                                .acoritem
                                                    .acoritem__left
                                                        .acoritem__title= i.title
                                                        .acoritem__sub= i.sub
                                                    .acoritem__right
                                                        .acoritem__count 1 шт
                                                        .acoritem__price= i.price

                                        .acorder__totals
                                            .acorder__total
                                                .acorder__total-title Общая сумма заказа
                                                .acorder__total-price 1 360 ₽
                                            .acorder__subtotal
                                                .acorder__subtotal-title Доставка
                                                .acorder__subtotal-price 1 360 ₽
























