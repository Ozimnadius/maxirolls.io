                .account__right
                    .account__current
                        +current()
                    .account__history
                        h3.account__subtitle История заказов
                        .account__orders
                            .acorders
                                each order in [1,2,3]
                                    .acorder
                                        .acorder__info
                                            .acorder__left
                                                .acorder__title Заказ №1024066
                                                .acorder__desc
                                                    .acorder__addr г. Нефеткамск, ул. Ленина 20/14
                                                    .acorder__date 26 июля 2020, 19:00
                                            .acorder__right
                                                .acorder__sub Статус заказа
